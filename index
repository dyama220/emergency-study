        <!-- DETAIL SCREEN -->
        <div id="screen-detail" class="hidden flex flex-col h-full">
            <header class="p-4 pt-10 glass-panel border-b border-purple-500/40 flex justify-between items-center shrink-0">
                <div class="flex items-center gap-3">
                    <button onclick="goHome()" class="flex items-center gap-1.5 p-2 bg-purple-900/40 rounded-lg border border-purple-500/30 active:scale-90 transition-all">
                        <i data-lucide="home" class="w-4 h-4 neon-purple-icon"></i>
                        <span class="text-[10px] font-bold text-purple-200 uppercase">戻る</span>
                    </button>
                    <div>
                        <h2 id="detail-title" class="text-[9px] font-bold text-purple-300 tracking-widest uppercase italic">DATABASE</h2>
